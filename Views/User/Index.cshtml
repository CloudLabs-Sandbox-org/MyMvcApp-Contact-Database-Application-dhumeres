@model IEnumerable<MyMvcApp.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<form asp-action="Search" method="get" style="margin-bottom:20px; display:flex; align-items:center;">
    <label for="query" style="margin-right:10px;">Find by name:</label>
    <input type="text" id="query" name="query" class="form-control" style="width:200px; margin-right:10px;" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<p>
    <a asp-action="Create" asp-controller="User" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
}

</table>